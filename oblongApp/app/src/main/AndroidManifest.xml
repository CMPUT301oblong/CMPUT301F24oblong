<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Oblong"
        tools:targetApi="31">
        <activity
            android:name=".AdminProfileBrowserActivity"
            android:exported="false" />
        <activity
            android:name=".AdminEventBrowserActivity"
            android:exported="false" />
        <activity
            android:name=".AdminProfileActivity"
            android:exported="false" />
        <activity
            android:name=".organizer_view_entrant_profile"
            android:exported="false" />
        <activity
            android:name=".organizer_create_notification_activity"
            android:exported="false" />
        <activity
            android:name=".organizer_entrant_waitlist"
            android:exported="false" />
        <activity
            android:name=".organizer_create_event_screen"
            android:exported="false" />
        <activity
            android:name=".organizer_profile_edit"
            android:exported="false" />
        <activity android:name=".RoleSelector" />
        <activity
            android:name=".EntrantProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".EntrantEventDescriptionWaitlistActivity"
            android:exported="false" />
        <activity
            android:name=".EntrantProfileScreenActivity"
            android:exported="false" />
        <activity
            android:name=".EntrantEventDescriptionActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".organizer_profile"
            android:exported="true" />
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/image_placeholder" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/common_google_signin_btn_text_dark_default" />
    </application>

</manifest>